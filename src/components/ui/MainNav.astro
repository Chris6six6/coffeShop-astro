const navigation = [
  {name: 'Nosotros', href: '/nosotros/' },
  {name: 'Blog', href: '/blog/' },
  {name: 'Proceso', href: '/proceso/' },
  {name: 'MenÃº', href: '/menu/' },
  {name: 'GalerÃ­a', href: '/galeria/' },
  {name: 'Contacto', href: '/contacto/' },
]

const currentPath = Astro.url.pathname;

const isActive = (href : string) => {
  if (href === '/') return currentPath === '/';
  return currentPath.startsWith(href);
}
---

<nav class="flex flex-col items-center mt-5 lg:flex-row gap-4">
    {navigation.map((item) => (
      <a
        href={item.href}
        class=`${isActive(item.href) ? 'text-coffee-400' : 'text-white hover:text-coffee-400 transition-colors duration-300 '} uppercase text-lg font-bold`
        >{item.name}</a>
    ))}
</nav>