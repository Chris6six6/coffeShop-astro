---
import CoffeeMenu from "./CoffeeMenu.astro";
import FoodMenu from "./FoodMenu.astro";
---
<section class="bg-coffee-800 py-10 -mt-20">
    <div class="max-w-7xl mx-auto bg-menu-image bg-no-repeat bg-contain bg-[center_80px] pt-[150px] lg:pt-[250px] pb-40">

        <h3 class="text-white font-black text-center text-lg pb-4 uppercase">
            Nuestro delicioso
            <span class="text-4xl block">Menu</span>
        </h3>

        <div class="grid grid-cols-1 2xl:grid-cols-2 gap-5 mt-10">
            <CoffeeMenu />
            <FoodMenu />
        </div>
    </div>
</section>